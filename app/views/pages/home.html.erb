<% if current_user %>
  <h1><a href="http://drinkspottings.com/drinks.html">Post a drink</a></h1>
  <div class="sidebar-left">
    <h6 style="margin-bottom:15px;"><%= current_user.name %></h6>
    <img src="<%= current_user.fb_pic_large %>" /> 
  </div>
  <div class="mainarea mainarea-center">
    <%= render 'shared/drinks' %>
  </div>
<% else %>
  <center>
  	<img src="/images/logo.png" class="top_logo"/>
  	<br />
    <img src="/images/drinks.png" />
    <div style="font-size:50px;" class="title">Share your spirit</div>
    <br />
    Drinkspottings lets you photograph and share
    <br />
    your favorite drinks and bars with the world.
  </center>
  <div style="width:100%; background-color:#F3EEE8; margin-top:25px;">
  	<div style="float:left;">
  	  <div style="font-size:50px;" class="title">Sign in with Facebook</div>
  	  <br />
  	  No need to create another username & password -
  	  <br />
      sign in with Facebook today!
    </div>
    <div style="float:right;">
  	  <div style="font-size:50px;" class="title">Get the apps</div>
  	  <br />
  	  Drinkspottings for iOS and Android are coming soon!
    </div>
  </div>
<% end %>
<% if current_user %>
  <h1><a href="http://drinkspottings.com/drinks.html">Post a drink</a></h1>
  <div class="sidebar-left">
    <h6 style="margin-bottom:15px;"><%= current_user.name %></h6>
    <img src="<%= current_user.fb_pic_large %>" /> 
  </div>
  <div class="mainarea mainarea-center">
    <%= render 'shared/drinks' %>
  </div>
<% else %>
  <center>
  	<a href="/auth/facebook">Sign in with Facebook</a>
  	<br />
  	<img src="/images/logo.png" class="top_logo"/>
  	<br />
    <img src="/images/drinks.png" style="padding-top:30px;"/>
    <div class="title">Share your spirit</div>
    <br />
    <p>Drinkspottings lets you photograph and share
    <br />
    your favorite drinks and bars with the world.</p>
  </center>
  <div style="width:100%;">
  	<div style="float:left; padding-left:150px; width:300px; padding-top:35px;">
  	  <div class="title">Sign in with Facebook</div>
  	  <br />
  	  <p>No need to create another username & password -
  	  <br />
      login with Facebook today!</p>
      <a href="/auth/facebook"><img src="/images/facebook-login.png"></a>
    </div>
    <div style="float:right; padding-right:150px; width:300px; padding-top:35px;">
  	  <div class="title">Get the apps</div>
  	  <br />
  	  <p>Coming soon...<br />Drinkspottings for iOS and Android.</p>
    </div>
  </div>
<% end %>
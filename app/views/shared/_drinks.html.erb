<% 
  #used to position the drink
  float = "left" 
%>

<div class="multi-columns">
  <% @posted_and_liked_drinks.each do |f| %>
    <%
      tags = Tag.find(:all, :conditions => ["drink_id = ?", f.id])
    %>
    <div class="half" style="float:<%= float %>;">
      <center>
        <h6 class="handfont" style="padding-top:20px; margin-bottom:20px; font-size:20px;"><img src="/images/title-left.png" /><%= f.name %><img src="/images/title-right.png" /></h6>
        <%= image_tag f.photo.url(:medium) %>
      </center>  
      <br />
      <div class="drinkinfo">
        <a href="/users/<%= f.userid %>"><img src="<%= f.fb_pic_square %>" width="20"/></a><a href="/users/<%= f.userid %>"><%= f.personname %></a> at Bar89.
        "<%= f.description %>"
      </div>
      <br />
      <div class="drinktag">
        <strong>#Whiskey</strong>
      </div>
      <div class="drinktag">
        <strong>#Gin</strong>
      </div>
    </div>
    
    <% if float == "left"
        float = "right"
      elsif
        float = "left"
      end %>
  <% end %>
</div>